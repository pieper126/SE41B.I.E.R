<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="375dp"
        android:id="@+id/or"
        android:layout_weight="0.43"><![CDATA[>
        ]]>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgMap"
            android:src="@drawable/map"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kroegnaam"
            android:id="@+id/textKroegNaam"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streetname 1"
            android:id="@+id/textAdress"
            android:layout_below="@+id/imgMap"
            android:layout_alignStart="@+id/imgMap"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel.: 0000-000000"
            android:id="@+id/textPhoneNo"
            android:layout_below="@+id/textAdress"
            android:layout_alignStart="@+id/textAdress"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A@B.COM"
            android:id="@+id/textEmail"
            android:layout_below="@+id/textPhoneNo"
            android:layout_alignStart="@+id/textPhoneNo"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSite"
            android:layout_below="@+id/textEmail"
            android:layout_alignStart="@+id/textEmail"
            android:layout_marginTop="5dp"
            android:text="www.a.nl"
            android:inputType="none" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textKroegNaam"
            android:layout_toStartOf="@+id/imgMap"
            android:layout_below="@+id/textKroegNaam"
            android:showDividers="middle|beginning|end"
            android:layout_marginTop="20dp"
            android:id="@+id/tableLayout"
            android:collapseColumns="true">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ma:"
                    android:id="@+id/txtMonday"
                    android:layout_column="0"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMoFrom"
                    android:layout_column="1"
                    android:textSize="12dp"
                    android:text="09:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/textDash"
                    android:layout_column="2"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:id="@+id/txtMoTo"
                    android:layout_column="3"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vrij:"
                    android:id="@+id/txtFriday"
                    android:layout_column="5"
                    android:textSize="12dp"
                    android:layout_marginLeft="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtFriFrom"
                    android:layout_column="1"
                    android:textSize="12dp"
                    android:text="09:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/textDash"
                    android:layout_column="2"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:id="@+id/txtFriTo"
                    android:layout_column="3"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Di:"
                    android:id="@+id/txtTuesday"
                    android:layout_column="0"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTuFrom"
                    android:layout_column="1"
                    android:textSize="12dp"
                    android:text="09:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/textDash"
                    android:layout_column="2"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:id="@+id/txtTuTo"
                    android:layout_column="3"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Za:"
                    android:id="@+id/txtSaturday"
                    android:layout_column="5"
                    android:textSize="12dp"
                    android:layout_marginLeft="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSaFrom"
                    android:layout_column="1"
                    android:textSize="12dp"
                    android:text="09:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/textDash"
                    android:layout_column="2"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:id="@+id/txtSaTo"
                    android:layout_column="3"
                    android:textSize="12dp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wo:"
                    android:id="@+id/txtWednesday"
                    android:layout_column="0"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtWeFrom"
                    android:layout_column="1"
                    android:textSize="12dp"
                    android:text="09:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/textDash"
                    android:layout_column="2"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:id="@+id/txtWeTo"
                    android:layout_column="3"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zo:"
                    android:id="@+id/txtSunday"
                    android:layout_column="5"
                    android:textSize="12dp"
                    android:layout_marginLeft="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSuFrom"
                    android:layout_column="1"
                    android:textSize="12dp"
                    android:text="09:00"
                    android:layout_marginLeft="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/textDash"
                    android:layout_column="2"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:id="@+id/txtSuTo"
                    android:layout_column="3"
                    android:textSize="12dp"
                    android:layout_marginLeft="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do:"
                    android:id="@+id/txtThursday"
                    android:layout_column="0"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtThFrom"
                    android:layout_column="1"
                    android:textSize="12dp"
                    android:text="09:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/textDash"
                    android:layout_column="2"
                    android:textSize="12dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:id="@+id/txtThTo"
                    android:layout_column="3"
                    android:textSize="12dp" />
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgRating"
            android:src="@android:color/darker_gray"
            android:layout_alignBottom="@+id/textKroegNaam"
            android:layout_toEndOf="@+id/textKroegNaam"
            android:layout_marginLeft="3dp"
            android:layout_alignTop="@+id/textKroegNaam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entry Fee:"
            android:id="@+id/textEntryFee"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:layout_below="@+id/textSite"
            android:layout_alignStart="@+id/textSite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:id="@+id/txtFee"
            android:textSize="20dp"
            android:layout_alignTop="@+id/textEntryFee"
            android:layout_toEndOf="@+id/textAdress"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beschrijving:"
            android:id="@+id/textDescription"
            android:layout_below="@+id/tableLayout"
            android:layout_alignStart="@+id/tableLayout"
            android:layout_marginTop="20dp"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes,"
            android:id="@+id/txtDescription"
            android:layout_below="@+id/textDescription"
            android:layout_alignStart="@+id/textDescription"
            android:layout_marginTop="5dp"
            android:layout_alignEnd="@+id/imgRating" />

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:background="#ffd5d6d6"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:id="@+id/buttons"
            android:layout_weight="0.52">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Push naar groep"
                android:id="@+id/btnPush"
                android:layout_alignTop="@+id/btnMenu"
                android:layout_toEndOf="@+id/btnMenu"
                android:layout_marginLeft="9dp"
                android:layout_alignParentBottom="true"
                android:onClick="OnPushGroup" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menukaart"
                android:id="@+id/btnMenu"
                android:layout_marginLeft="7dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:onClick="OnPushMenu" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:id="@+id/btnReviews"
                android:layout_alignTop="@+id/btnMenu"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="14dp"
                android:layout_alignParentBottom="true"
                android:onClick="OnPushReviews" />
        </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:baselineAligned="false"
        android:weightSum="1"
        android:layout_margin="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="bottom">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnSocial"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:src="@drawable/socialicon"
            android:scaleType="fitCenter"
            android:layout_weight="0.33" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnBack"
            android:layout_weight="0.33"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:focusableInTouchMode="false"
            android:onClick="onBackClicked" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnSettings"
            android:layout_weight="0.33"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wrench"
            android:scaleType="fitCenter" />
    </LinearLayout>


</LinearLayout>
