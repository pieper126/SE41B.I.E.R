                android:id="@+id/txtBeer"
                android:layout_column="2"
                android:layout_marginLeft="3dp"
                android:inputType="numberSigned" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

