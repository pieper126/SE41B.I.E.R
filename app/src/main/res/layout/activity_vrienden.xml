<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:id="@+id/vrienden"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:id="@+id/LLVrienden1"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vrienden"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:textSize="30dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_weight="0.91"
                android:text="search" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="446dp"
                android:id="@+id/listView" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:baselineAligned="false"
            android:weightSum="1"
            android:layout_margin="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnSocial"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="goToSearchVrienden"
                android:src="@drawable/search"
                android:scaleType="fitCenter"
                android:layout_weight="0.33"
                android:layout_margin="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnSearch"
                android:layout_weight="0.33"
                android:layout_gravity="center_vertical"
                android:onClick="goToHomeVrienden"
                android:src="@drawable/back"
                android:scaleType="fitCenter"
                android:focusableInTouchMode="false" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnSettings"
                android:layout_weight="0.33"
                android:onClick="goToContactVrienden"
                android:layout_gravity="center_vertical"
                android:src="@drawable/wrench"
                android:scaleType="fitCenter"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>